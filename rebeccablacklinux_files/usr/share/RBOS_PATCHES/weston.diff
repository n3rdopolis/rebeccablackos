 		weston_log("Failed to initialize udev context.\n");
@@ -882,6 +891,9 @@ out_udev:
 out_compositor:
 	weston_compositor_shutdown(&compositor->base);
 
+err_compositor:
+	weston_compositor_shutdown(&compositor->base);	
+	
 out_free:
 	free(compositor);
 
