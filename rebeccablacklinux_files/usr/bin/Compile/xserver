SOURCENAME=xserver
SOURCEURL=git://anongit.freedesktop.org/xorg/xserver 

if [[ "$1" != build-only ]]
then
mkdir /srcbuild
cd /srcbuild

OLDSOURCEURL=$(git --git-dir="$SOURCENAME"/.git remote -v | grep '(fetch)' | awk '{print $2}')
if [[ -z "$OLDSOURCEURL" || "$SOURCEURL" != "$OLDSOURCEURL" ]]
then
rm -rf "$SOURCENAME"
fi

git clone "$SOURCEURL"
cd "$SOURCENAME"
git checkout xwayland-1.12
git reset --hard 
git clean -fdx 
git pull

fi



if [[ "$1" != download-only ]]
then
cd /srcbuild
cd "$SOURCENAME"
echo "REVISION $(git rev-parse HEAD)"
. /usr/bin/build_vars
mkdir -p $WLD/share/aclocal

sed -i 's/vesa/wlshm/g' hw/xfree86/common/xf86AutoConfig.c
./autogen.sh --disable-selective-werror --prefix=$WLD --libdir=$WLD/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH) 
make
make install


mkdir $WLD/X11
cp -R /usr/share/X11/* $WLD/share/X11
cp /usr/bin/xkbcomp $WLD/bin



#set the log folder to allow nested X to create log files, and not fataly exit
mkdir -p $WLD/var/log
chmod 777 $WLD/var/log

#disable setuid on xserver
chmod -s $WLD/bin/Xorg


cd ..

fi