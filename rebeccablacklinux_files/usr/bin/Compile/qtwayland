SOURCENAME=giucam-qtwayland
SOURCEURL=git://gitorious.org/~giucam/qt/giucam-qtwayland

if [[ "$1" != build-only ]]
then
mkdir /srcbuild
cd /srcbuild

OLDSOURCEURL=$(git --git-dir="$SOURCENAME"/.git remote -v | grep '(fetch)' | awk '{print $2}')
if [[ -z "$OLDSOURCEURL" || "$SOURCEURL" != "$OLDSOURCEURL" ]]
then
rm -rf "$SOURCENAME"
fi

git clone "$SOURCEURL"
cd "$SOURCENAME"
git checkout master
git reset --hard 
git clean -fdx 
git pull

fi



if [[ "$1" != download-only ]]
then
cd /srcbuild
cd "$SOURCENAME"
echo "REVISION $(git rev-parse HEAD)"
. /usr/bin/build_vars
mkdir -p $WLD/share/aclocal


patch -p1 < /usr/share/RBOS_PATCHES/qtwayland.diff
sed -i 's/waylandDispaly/waylandDisplay/g' src/plugins/platforms/wayland/gl_integration/xcomposite_egl/qwaylandxcompositeeglintegration.cpp 
qmake
make
cd src
cd plugins
make 
make install
cd ..
cd ..
cd ..

fi