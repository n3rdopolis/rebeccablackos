SOURCENAME=cairo
SOURCEURL=git://anongit.freedesktop.org/cairo

if [[ "$1" != build-only ]]
then
mkdir /srcbuild
cd /srcbuild

OLDSOURCEURL=$(git --git-dir="$SOURCENAME"/.git remote -v | grep '(fetch)' | awk '{print $2}')
if [[ -z "$OLDSOURCEURL" || "$SOURCEURL" != "$OLDSOURCEURL" ]]
then
rm -rf "$SOURCENAME"
fi

git clone "$SOURCEURL"
cd "$SOURCENAME"
git checkout master
git reset --hard 
git clean -fdx 
git pull

fi


if [[ "$1" != download-only ]]
then
cd /srcbuild
cd "$SOURCENAME"
echo "REVISION $(git rev-parse HEAD)"
. /usr/bin/build_vars
mkdir -p $WLD/share/aclocal

./autogen.sh --prefix=$WLD --enable-gl --enable-xcb --libdir=$WLD/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH)
make 
make install
cd ..
fi
