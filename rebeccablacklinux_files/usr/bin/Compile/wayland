if [[ "$1" != build-only ]]
then
mkdir /srcbuild
cd /srcbuild
git clone git://anongit.freedesktop.org/wayland/wayland
cd wayland
git checkout master
git reset --hard 
git clean -fdx 
git pull

fi



if [[ "$1" != download-only ]]
then
cd /srcbuild
cd wayland
echo "REVISION $(git rev-parse HEAD)"
. /usr/bin/build_vars
mkdir -p $WLD/share/aclocal

./autogen.sh --prefix=$WLD --libdir=$WLD/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH)
make
make install
cd ..

fi
