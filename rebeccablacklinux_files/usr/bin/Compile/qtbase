if [[ "$1" != build-only ]]
then
mkdir /srcbuild
cd /srcbuild
git clone git://gitorious.org/qt/qtbase
cd qtbase
git checkout master
git reset --hard 
git clean -fdx 
git pull

fi



if [[ "$1" != download-only ]]
then
cd /srcbuild
cd qtbase
echo "REVISION $(git rev-parse HEAD)"
. /usr/bin/build_vars
mkdir -p $WLD/share/aclocal

./configure -confirm-license  -opensource -qpa -xcb -wayland -egl -opengl es2 -prefix $WLD -release  -no-reduce-relocations 
make
make install 
bin/syncqt



#install qt tests
find /srcbuild/qtbase/examples  -executable -type f   | while read TEST
do
cp "$TEST" $WLD/bin
done
cd ..

fi