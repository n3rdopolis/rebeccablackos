SOURCENAME=kde-workspace
SOURCEURL=git://anongit.kde.org/kde-workspace

if [[ "$1" != build-only ]]
then
mkdir /srcbuild
cd /srcbuild

OLDSOURCEURL=$(git --git-dir="$SOURCENAME"/.git remote -v | grep '(fetch)' | awk '{print $2}')
if [[ -z "$OLDSOURCEURL" || "$SOURCEURL" != "$OLDSOURCEURL" ]]
then
rm -rf "$SOURCENAME"
fi

git clone "$SOURCEURL"
cd "$SOURCENAME"
git checkout master
git reset --hard 
git clean -fdx 
git pull

fi



if [[ "$1" != download-only ]]
then
cd /srcbuild
cd "$SOURCENAME"
echo "REVISION $(git rev-parse HEAD)"
. /usr/bin/build_vars
mkdir -p $WLD/share/aclocal


#sed -i '/kde4_no_enable_final/d' libs/solid/control/CMakeLists.txt
#sed -i '/kde4_no_enable_final/d' libs/ksysguard/CMakeLists.txt
#sed -i '/KDE4_MOC_HEADERS/d' libs/ksysguard/signalplotter/CMakeLists.txt
#sed -i '/kde4_no_enable_final/d' kwin/kcmkwin/CMakeLists.txt
#sed -i '/kde4_no_enable_final/d' kwin/effects/CMakeLists.txt
#sed -i '/KDE4_NO_ENABLE_FINAL/d' kcontrol/input/CMakeLists.txt
#sed -i '/KDE4_NO_ENABLE_FINAL/d' kcontrol/colors/CMakeLists.txt
#sed -i '/KDE4_NO_ENABLE_FINAL/d' kcontrol/style/CMakeLists.txt
#sed -i '/kde4_no_enable_final/d' kcontrol/keys/CMakeLists.txt
#sed -i '/KDE4_NO_ENABLE_FINAL/d' kcontrol/fonts/CMakeLists.txt
#sed -i '/kde4_no_enable_final/d' klipper/CMakeLists.txt
#sed -i '/check_symbol_exists/d' kdm/ConfigureChecks.cmake
#sed -i '/kde4_no_enable_final/d' plasma/generic/applets/systemtray/CMakeLists.txt
#sed -i '/AUTOMOC4_MOC_HEADERS/d' plasma/generic/dataengines/places/CMakeLists.txt

rm CMakeCache.txt
mkdir build
cd build
cmake .. -DCMAKE_INSTALL_PREFIX=$WLD -DLIB_INSTALL_DIR=$WLD/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH) 
make 
make install 
cd ..

fi