SOURCENAME=kdelibs
SOURCEURL=git://anongit.kde.org/kdelibs

ACTION=$1
shift 1


if [[ "$ACTION" != build-only ]]
then
mkdir /srcbuild
cd /srcbuild

OLDSOURCEURL=$(git --git-dir="$SOURCENAME"/.git remote -v | grep '(fetch)' | grep origin | awk '{print $2}' )
if [[ -z "$OLDSOURCEURL" || "$SOURCEURL" != "$OLDSOURCEURL" ]]
then
rm -rf "$SOURCENAME"
fi

git clone "$SOURCEURL"
cd "$SOURCENAME"
git checkout frameworks
git reset --hard 
git clean -fdx 
git pull

fi



if [[ "$ACTION" != download-only ]]
then
cd /srcbuild
cd "$SOURCENAME"
echo "REVISION $(git rev-parse HEAD)"
. /usr/bin/build_vars /opt
mkdir -p $WLD/share/aclocal


sed -i 's/-Werror-implicit-function-declaration//g' /usr/share/kde4/apps/cmake/modules/FindKDE4Internal.cmake
sed -i 's/-Werror=return-type//g'                   /usr/share/kde4/apps/cmake/modules/FindKDE4Internal.cmake 

rm CMakeCache.txt
mkdir build
cd build
cmake .. -DQT5_BUILD=TRUE -DKDE4_BUILD_TESTS=TRUE -DCMAKE_INSTALL_PREFIX=$WLD -DLIB_INSTALL_DIR=$WLD/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH) 
make -i
make install -i

#install the kdelibs tests
cp /srcbuild/"$SOURCENAME"/build/kdeui/tests/kcategorizedviewtest $WLD/bin
cp /srcbuild/"$SOURCENAME"/build/kdeui/tests/kcolorutilsdemo $WLD/bin
cp /srcbuild/"$SOURCENAME"/build/kdeui/tests/krulertest $WLD/bin

cd ..

fi