SOURCENAME=libdbusmenu-qt
SOURCEURL=http://bazaar.launchpad.net/~dbusmenu-team/libdbusmenu-qt/trunk

ACTION=$1
shift 1


if [[ "$ACTION" != build-only ]]
then
mkdir /srcbuild
cd /srcbuild


OLDSOURCEURL=$(bzr info $SOURCENAME | grep "parent branch" | awk -F "branch: " '{print $2}')
if [[ -z "$OLDSOURCEURL" || "$SOURCEURL" != "$OLDSOURCEURL" ]]
then
rm -rf "$SOURCENAME"
fi

bzr branch "$SOURCEURL" "$SOURCENAME"
cd "$SOURCENAME"
bzr update
bzr revert
bzr clean-tree --force --detritus
bzr pull

fi



if [[ "$ACTION" != download-only ]]
then
cd /srcbuild
cd "$SOURCENAME"
echo "REVISION $(bzr revno)"
. /usr/bin/build_vars /opt
mkdir -p $WLD/share/aclocal

patch -p0 -i /usr/share/RBOS_PATCHES/libdbusmenu-qt.diff

mkdir build
cd build
cmake .. -DCMAKE_INSTALL_PREFIX=$WLD -DLIB_INSTALL_DIR=$WLD/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH) 
make 
make install
cd ..
cd ..

fi