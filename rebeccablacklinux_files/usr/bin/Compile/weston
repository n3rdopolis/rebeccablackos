if [[ "$1" != build-only ]]
then
mkdir /srcbuild
cd /srcbuild
git clone git://anongit.freedesktop.org/wayland/weston
cd weston
git checkout master
git reset --hard 
git clean -fdx 
git pull

fi




if [[ "$1" != download-only ]]
then
cd /srcbuild
cd weston
echo "REVISION $(git rev-parse HEAD)"
. /usr/bin/build_vars
mkdir -p $WLD/share/aclocal

patch -p1 < /usr/share/RBOS_PATCHES/weston.diff
./autogen.sh --prefix=$WLD --libdir=$WLD/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH) 
make
make install -i


#install Wayland clients into the PATH
find /srcbuild/weston/clients -executable | while read CLIENT
do
cp "$CLIENT" $WLD/bin
done

#Install the screen capture utils
find /srcbuild/weston/wcap -executable | while read CLIENT
do
cp "$CLIENT" $WLD/bin
done

#turn OFF setuid on weston
chmod -s $WLD/bin/weston

#Apps and weston crash when they can't find the appropriate cursors
cp -rn /usr/share/icons/whiteglass/cursors/* /usr/share/icons/oxy-white/cursors
cp /usr/share/icons/oxy-white/cursors/dnd-none /usr/share/icons/oxy-white/cursors/grabbing
 

#set weston-launch binary as setuid
chmod +s /opt/bin/weston-launch

#change the weston executable to one that first sets variables, then calls weston-launch for running weston in a TTY AS THE USER
mv /opt/bin/weston /opt/bin/weston-display-server
cp /usr/bin/westoncaller /opt/bin/weston

cd ..

fi