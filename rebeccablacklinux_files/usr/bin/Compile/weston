if [[ "$1" != build-only ]]
then
mkdir /srcbuild
cd /srcbuild
git clone git://anongit.freedesktop.org/wayland/weston
cd weston
git checkout a64b15d1608fe10464381148b775e132544c3921
git pull

fi




if [[ "$1" != download-only ]]
then
cd /srcbuild
cd weston
echo "REVISION $(git rev-parse HEAD)"
export LD_LIBRARY_PATH=/opt/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH):/usr/local/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH):/usr/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH):/opt/lib:/usr/local/lib:/usr/lib
export PATH="/opt/sbin:/opt/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/usr/local/bin:/sbin:/bin:/usr/games"
export WLD=/opt
PKG_CONFIG_PATH=$WLD/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH)/pkgconfig:$WLD/lib/pkgconfig/:$WLD/share/pkgconfig/
ACLOCAL="aclocal -I $WLD/share/aclocal"
C_INCLUDE_PATH=$WLD/include
LIBRARY_PATH=$WLD/lib
PKG_CONFIG_ALLOW_SYSTEM_CFLAGS=1
mkdir -p $WLD/share/aclocal
export WLD LD_LIBRARY_PATH PKG_CONFIG_PATH ACLOCAL C_INCLUDE_PATH \
       LIBRARY_PATH PKG_CONFIG_ALLOW_SYSTEM_CFLAGS
patch -p1 < /tmp/weston.diff
./autogen.sh --prefix=$WLD --libdir=$WLD/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH) --with-cairo-glesv2 
make
make install -i


#install Wayland clients into the PATH
find /srcbuild/weston/clients -executable | while read CLIENT
do
cp "$CLIENT" $WLD/bin
done

#turn OFF setuid on weston
chmod -s $WLD/bin/weston

cd ..

fi