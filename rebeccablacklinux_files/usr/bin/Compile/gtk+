if [[ "$1" != build-only ]]
then
mkdir /srcbuild
cd /srcbuild
git clone git://git.gnome.org/gtk+
cd gtk+
git checkout master
git reset --hard 
git clean -fdx 
git pull

fi



if [[ "$1" != download-only ]]
then
cd /srcbuild
cd gtk+
echo "REVISION $(git rev-parse HEAD)"
export LD_LIBRARY_PATH=/opt/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH):/usr/local/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH):/usr/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH):/opt/lib:/usr/local/lib:/usr/lib
export PATH="/opt/sbin:/opt/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/usr/local/bin:/sbin:/bin:/usr/games"
export WLD=/opt
PKG_CONFIG_PATH=$WLD/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH)/pkgconfig:$WLD/lib/pkgconfig/:$WLD/share/pkgconfig/
ACLOCAL="aclocal -I $WLD/share/aclocal"
C_INCLUDE_PATH=$WLD/include
LIBRARY_PATH=$WLD/lib
PKG_CONFIG_ALLOW_SYSTEM_CFLAGS=1
mkdir -p $WLD/share/aclocal
export WLD LD_LIBRARY_PATH PKG_CONFIG_PATH ACLOCAL C_INCLUDE_PATH \
       LIBRARY_PATH PKG_CONFIG_ALLOW_SYSTEM_CFLAGS
./autogen.sh --prefix=$WLD --libdir=$WLD/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH) --enable-x11-backend --enable-wayland-backend --enable-debug=yes   
make 
make install


#put some GTK apps in /usr/local/bin, as the instructions say Wayland runnable apps are there.
ln -s /usr/bin/gedit             $WLD/bin/gedit
ln -s /usr/bin/epiphany-browser  $WLD/bin/epiphany-browser
ln -s /usr/bin/gnibbles          $WLD/bin/gnibbles 
ln -s /usr/bin/unity             $WLD/bin/unity 
ln -s /usr/bin/nautilus          $WLD/bin/nautilus
ln -s /usr/bin/file-roller       $WLD/bin/file-roller
ln -s /usr/bin/cheese            $WLD/bin/cheese
cd ..


fi