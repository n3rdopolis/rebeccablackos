export LD_LIBRARY_PATH=/opt/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH):/usr/local/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH):/usr/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH):/opt/lib:/usr/local/lib:/usr/lib
mkdir /srcbuild
cd /srcbuild
export WLD=/opt
PKG_CONFIG_PATH=$WLD/lib/pkgconfig/:$WLD/share/pkgconfig/
ACLOCAL="aclocal -I $WLD/share/aclocal"
C_INCLUDE_PATH=$WLD/include
LIBRARY_PATH=$WLD/lib
PKG_CONFIG_ALLOW_SYSTEM_CFLAGS=1
export QTDIR=$WLD
export PATH=$QTDIR/bin/:$PATH
export LD_LIBRARY_PATH=$QTDIR/lib/:$LD_LIBRARY_PATH
export PKG_CONFIG_PATH=$QTDIR/lib/pkgconfig/:$PKG_CONFIG_PATH
export QT_PLUGIN_PATH=$QTDIR/lib/plugins/
mkdir -p $WLD/share/aclocal
export WLD LD_LIBRARY_PATH PKG_CONFIG_PATH ACLOCAL C_INCLUDE_PATH \
       LIBRARY_PATH PKG_CONFIG_ALLOW_SYSTEM_CFLAGS
#git clone twice from QT, because sometimes the repos randomly 'hang up'
git clone git://gitorious.org/~thiago-intel/qt/thiago-intels-qt/
git clone git://gitorious.org/~thiago-intel/qt/thiago-intels-qt/
cd thiago-intels-qt
git checkout 4.8-qpa-wayland
echo "REVISION $(git rev-parse HEAD)"
patch -p1 < /tmp/thiago-intels-qt.diff
./configure -confirm-license -opensource -release -qpa  -egl -opengl es2 -prefix $WLD -no-webkit -reduce-exports -reduce-relocations
make
make install
cd ..



#install qt tests
find /srcbuild/thiago-intels-qt/examples -executable | while read TEST
do
cp "$TEST" /usr/local/bin
done
