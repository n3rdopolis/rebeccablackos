if [[ "$1" != build-only ]]
then
mkdir /srcbuild
cd /srcbuild
git clone git://gitorious.org/~thiago-intel/qt/thiago-intels-qt/
cd thiago-intels-qt
git checkout 4.8-qpa-wayland
git reset --hard 
git clean -fdx 
git pull

fi



if [[ "$1" != download-only ]]
then
cd /srcbuild
cd thiago-intels-qt
echo "REVISION $(git rev-parse HEAD)"
. /usr/bin/build_vars
mkdir -p $WLD/share/aclocal

patch -p1 < /tmp/thiago-intels-qt.diff
./configure -confirm-license -opensource -release -qpa  -egl -opengl es2 -prefix $WLD -no-webkit -reduce-exports -reduce-relocations
make
make install


#install qt tests
find /srcbuild/thiago-intels-qt/examples -executable | while read TEST
do
cp "$TEST" $WLD/bin
done

#install QT binaries
find /srcbuild/thiago-intels-qt/bin -executable | while read QTAPP
do
cp "$QTAPP" $WLD/bin
done
cd ..

fi