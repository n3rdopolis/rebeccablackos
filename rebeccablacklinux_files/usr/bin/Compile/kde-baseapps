SOURCENAME=kde-baseapps
SOURCEURL=git://anongit.kde.org/kde-baseapps

if [[ "$1" != build-only ]]
then
mkdir /srcbuild
cd /srcbuild

OLDSOURCEURL=$(git --git-dir="$SOURCENAME"/.git remote -v | grep '(fetch)' | grep origin | awk '{print $2}' )
if [[ -z "$OLDSOURCEURL" || "$SOURCEURL" != "$OLDSOURCEURL" ]]
then
rm -rf "$SOURCENAME"
fi

git clone "$SOURCEURL"
cd "$SOURCENAME"
git checkout master
git reset --hard 
git clean -fdx 
git pull

fi



if [[ "$1" != download-only ]]
then
cd /srcbuild
cd "$SOURCENAME"
echo "REVISION $(git rev-parse HEAD)"
. /usr/bin/build_vars
mkdir -p $WLD/share/aclocal


#mkdir /opt/share/cmake-2.8/modules

#find /opt/share/ECM-0.0.5/ | while read FILE
#do 
#cp $FILE /opt/share/cmake-2.8/Modules/
#cp $FILE /opt/share/cmake-2.8/modules/
#done

#cp -r /opt/share/cmake /opt/include

#sed -i '/KDE4_NO_ENABLE_FINAL/d' konqueror/settings/CMakeLists.txt

rm CMakeCache.txt
mkdir build
cd build
cmake .. -DCMAKE_INSTALL_PREFIX=$WLD -DLIB_INSTALL_DIR=$WLD/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH) 
make 
make install 
cd ..

fi