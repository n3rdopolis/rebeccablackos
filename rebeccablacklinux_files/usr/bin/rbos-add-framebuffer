#Require root privlages
if [[ $UID != 0 ]]
then
echo "Must be run as root."
exit
fi



CURRENTOPTION=cat /etc/default/grub | tr [:lower:] [:upper:] | grep VGA | awk -F VGA= '{print $2}' | awk '{print $1}'
if [[ -z $CURRENTOPTION ]]
then
CURRENTOPTION="Not Specified"
fi

dialog  --msgbox "This will assist you in configuring your system, so that a framebuffer is force created upon the next reboot, with the specified resolution." 7 60

RESOLUTION=$(dialog --radiolist "Select Framebuffer resolution, if your video card driver doesn't create a framebuffer device by default

Current option is $CURRENTOPTION" 20 60 20 785 640x480 off 788 800x600 off 791 1024x768 on 794 1280x1024 off 834 1400x1050 off 884 1600x1200 off 0 "Disable Framebuffer Boot" off --stdout)
OKSelected=$?
if [[ $OKSelected == 0 ]]
then

if [[ $RESOLUTION == 0 ]]
then
sed -ri 's/\bvga=\S*//gI' /etc/default/grub
else
sed -ri 's/\bvga=\S*//gI' /etc/default/grub
sed -i "s/GRUB_CMDLINE_LINUX_DEFAULT=\"/GRUB_CMDLINE_LINUX_DEFAULT=\"vga=$RESOLUTION /g" /etc/default/grub
fi

FORCEFB=(dialog --radiolist "Would you like to force/unforce weston to use the framebuffer backend" 20 60 20 1 "Force framebuffer" off 0 "Unforce Framebuffer" off 2 "Leave Unchanged" on --stdout)
OKSelected=$?
if [[ $OKSelected == 0 ]]
then

if [[ $FORCEFB == 1 ]]
then
sed -ri 's/forcefbdev//gI' /etc/default/grub
sed -i "s/GRUB_CMDLINE_LINUX_DEFAULT=\"/GRUB_CMDLINE_LINUX_DEFAULT=\"forcefbdev /g" /etc/default/grub
elif [[ $FORCEFB == 0 ]]
then
sed -ri 's/forcefbdev//gI' /etc/default/grub
fi

update-grub
dialog  --yesno "You will need to restart in order for the changes to apply" 7 60
OKSelected=$?
if [[ $OKSelected == 0 ]]
then
reboot
fi
fi





