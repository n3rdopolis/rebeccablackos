#Require root privlages
if [[ $UID != 0 ]]
then
echo "Must be run as root."
exit
fi



CURRENTOPTION=cat /etc/default/grub | grep GRUB_CMDLINE_LINUX_DEFAULT | tr [:lower:] [:upper:] | grep VGA | awk -F VGA= '{print $2}' | awk '{print $1}'
if [[ -z $CURRENTOPTION ]]
then
CURRENTOPTION="Not Specified"
fi

dialog  --msgbox "This will assist you in configuring your system, so that a framebuffer is force created upon the next reboot, with the specified resolution." 7 60

RESOLUTION=$(dialog --radiolist "Select Framebuffer resolution, if your video card driver doesn't create a framebuffer device by default

Current option is $CURRENTOPTION" 20 60 20 786 640x480(x24) off 789 800x600(x24) off 792 1024x768(x24) off 795 1280x1024(x24) off 8348 1400x1050(x24) off 867 1440x900(x24) off 799 1600x1200(x24) off 0 "Disable Framebuffer Boot" off 2 "Leave Unchanged" on --stdout)
OKSelected=$?
if [[ $OKSelected == 0 && $RESOLUTION != 2 ]]
then

if [[ $RESOLUTION == 0 ]]
then
sed -ri 's/\bvga=\S*//gI' /etc/default/grub
else
sed -ri 's/\bvga=\S*//gI' /etc/default/grub
sed -i "s/GRUB_CMDLINE_LINUX_DEFAULT=\"/GRUB_CMDLINE_LINUX_DEFAULT=\"vga=$RESOLUTION /g" /etc/default/grub
fi


update-grub
dialog  --yesno "You will need to restart in order for the changes to apply

Restart now?" 7 60
OKSelected=$?
if [[ $OKSelected == 0 ]]
then
reboot
fi
fi





