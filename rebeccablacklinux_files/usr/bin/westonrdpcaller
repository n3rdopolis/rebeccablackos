#This script calls a Weston server with the RDP backend

cd ~
mkdir weston-rdp
#Only generate the key if it doesn't exist
if [[ ! -e ~/weston-rdp/rdpkey.rdp ]]
then
  cd weston-rdp
  winpr-makecert -rdp > rdpkey.rdp
  cp $HOSTNAME.crt rdpcrt.crt
  cp $HOSTNAME.key rdpcrtkey.key
  cd $OLDPWD
fi


zenity --forms --text="A new Weston server supporting RDP connections will start the background. 

*Please note that the RDP session will NOT be password protected." 


zenity --forms --text="The Weston RDP Server session is now running

The RDP session is running as the current user $USER
Using an RDP client, you can connect to:

hostname: $(hostname)

or the IP addresses:
$(hostname -I | sed 's/ /\n/g')
to connect to the session

Close this dialog to terminate the Weston RDP server.

Otherwise, leave this dialog open" &
DIALOGPID=$!

ServerID=wayland-$RANDOM
weston-display-server --socket=$ServerID --modules=xwayland.so --backend=rdp-backend.so --rdp-tls-cert=weston-rdp/rdpcrt.crt --rdp-tls-key=weston-rdp/rdpcrtkey.key &
WESTONPID=$!

#Wait until the zenity form dies, or until the remote enabled weston dies
while [ 1 ]
do
  #If either the weston server dies, or the dialog dies, terminate both, and exit
  if [[ ! -e /proc/$DIALOGPID || ! -e /proc/$WESTONPID ]]
  then
    kill -9 $WESTONPID
    kill -9 $DIALOGPID
    exit
  fi
sleep 1
done