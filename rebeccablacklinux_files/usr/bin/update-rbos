echo "This needs to be run as root"
cd /usr/share

apt-get install subversion
#download off the SVN
svn co https://rebeccablackos.svn.sourceforge.net/svnroot/rebeccablackos
#make the files owned by root, and executable
chmod +x -R /usr/share/rebeccablackos/
chown  root  /usr/share/rebeccablackos/
chgrp  root  -R /usr/share/rebeccablackos/
#copy the files where they belong
cp -a /usr/share/rebeccablackos/rebeccablacklinux_files/* /
#copy /usr/import files where they belong too
rsync /usr/import/* -a /
chmod 777 /tmp

#Install menu items
install_menu_items 

#Install the dev packages that got removed
INSTALLPACKAGES="$(cat /usr/share/RemovedPackages.txt)"
yes Y | apt-get install $INSTALLPACKAGES

if [[ $1 == build ]]
then 
#run the config script to install depends in case they changed
/tmp/configure_phase1.sh
#remove packages that cause conflict
yes Yes |apt-get remove gdm gnome-session -y

compile_all build-only
else
echo "not building source because this script wasn't called with the option 'build'"
fi
echo "Now run update-rbos-user (without sudo) to update your user profile"