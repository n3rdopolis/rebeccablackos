echo "This needs to be run as root"
cd /usr/share
svn co https://rebeccablackos.svn.sourceforge.net/svnroot/rebeccablackos
cp -a /usr/share/rebeccablackos/* ~/RBOS_Build_Files/build_mountpoint/phase_2/
rsync /usr/import/* -a /
echo "Will start downloading and building sourcecode in 15 seconds. You can cancel at any time with CTRL-c"
sleep 15
compile_all