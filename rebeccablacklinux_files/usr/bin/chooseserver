#call up Xorg to set up display for chooser
Xorg &
#set the display
export DISPLAY=:0
#wait for 10 seconds. X may take ages to load on an actual CD
sleep 10
#launch the chooser
SERVER=$(kdialog --menu "Choose the display server." Xorg Xorg Wayland Wayland)
#kill Xorg
killall Xorg
#remove the display variable so that Weston doesn't try to run nested under the display
unset DISPLAY



if [ $SERVER == "Wayland" ]
then
westoncaller
else
lightdm
fi
