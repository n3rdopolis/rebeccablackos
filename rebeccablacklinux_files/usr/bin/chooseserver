stty intr undef

while [ 1 ]
do
server=$(dialog --no-cancel --no-ok --menu "Do you want an X server, or Wayland server?" 10 50 2 X "" Wayland "" --stdout )
if [ $server == "X" ]
then
kdm
fi

if [ $server == "Wayland" ]
then
westoncaller
fi
sleep 5
chvt $(fgconsole)
done