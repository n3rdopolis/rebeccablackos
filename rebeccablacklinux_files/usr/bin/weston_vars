unset HOME
export HOME=$(echo ~)

mkdir $HOME/.local_wayland
mkdir $HOME/.config_wayland
mkdir $HOME/.cache_wayland

export XDG_DATA_DIRS=/opt/share:$XDG_DATA_DIRS
export XDG_CONFIG_DIRS=/opt/etc/xdg:$XDG_CONFIG_DIRS

export XDG_DATA_HOME=$HOME/.local_wayland
export XDG_CONFIG_HOME=$HOME/.config_wayland
export XDG_CACHE_HOME=$HOME/.cache_wayland
export XDG_RUNTIME_DIR=/run/user/$USER
export PATH=/opt/bin:$PATH
export LD_LIBRARY_PATH=/opt/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH):/usr/local/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH):/usr/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH):/opt/lib:/usr/local/lib:/usr/lib
export GDK_BACKEND=wayland
export CLUTTER_BACKEND=wayland
export COGL_RENDERER=egl_wayland 
export QTVER=qt5
export QTDIR=/opt
export PATH=$QTDIR/bin/:$PATH
export LD_LIBRARY_PATH=$QTDIR/lib/:$LD_LIBRARY_PATH
export PKG_CONFIG_PATH=$QTDIR/lib/pkgconfig/:$PKG_CONFIG_PATH
export QT_PLUGIN_PATH=$QTDIR/lib/plugins/
export QT_QPA_PLATFORM=wayland
export ELM_ENGINE=wayland_shm
export ECORE_EVAS_ENGINE=wayland_shm
export SDL_VIDEODRIVER=wayland
export $(dbus-launch)

