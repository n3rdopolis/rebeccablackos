ServerID=$RANDOM
unset DISPLAY
export WAYLAND_DISPLAY=wayland-0
LD_PRELOAD=/usr/lib/i386-linux-gnu/libjpeg.so weston-display-server --xserver --socket=$ServerID &
export WAYLAND_DISPLAY=$ServerID
sleep 3
weston-terminal &
