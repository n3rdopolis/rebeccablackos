#Change to the users homepath so weston starts in the right place
cd ~

#unset most varaibles
while read var
do 
unset $var
done < <(env | awk -F = '{print $1}' | grep -v ^PATH$ | grep -v ^LOGNAME$ ) 

#Get variables from users bashrc
. ~/.bashrc

#Import Wayland variables
. /usr/bin/weston_vars

WESTONTTY=$1
WSESSIONDATA=($2)

CompositorExec="$( echo "${WSESSIONDATA[0]}" | perl -pe 's/\$(\w+)/$ENV{$1}/g' )"
BackendArguments="$( echo "${WSESSIONDATA[1]}" | perl -pe 's/\$(\w+)/$ENV{$1}/g' )"
SessionArgument="$( echo "${WSESSIONDATA[2]}" | perl -pe 's/\$(\w+)/$ENV{$1}/g' )"
AdditionalArguments="$( echo "${WSESSIONDATA[3]}" | perl -pe 's/\$(\w+)/$ENV{$1}/g' )"
Name="$( echo "${WSESSIONDATA[4]}" | perl -pe 's/\$(\w+)/$ENV{$1}/g' )"

#Detect hardware abilities
if [[ $(ls  /dev/dri/card* ) ]]
then 
WESTONBACKEND=drm-backend.so
else
WESTONBACKEND=fbdev-backend.so
fi
if [[ $(cat /proc/cmdline | grep -c forcefbdev ) != 0 ]]
then
WESTONBACKEND=fbdev-backend.so
fi



#Call weston
weston-launch -t /dev/tty$WESTONTTY -- "$BackendArguments"  "$SessionArgument" "$AdditionalArguments" &

echo "RegisterSession
$WESTONTTY
$!
$LOGNAME" > /run/loginmanager_control