#This script configures Grub to add nouveau.config=NvMSI=0  to the kernel command line, which is a workaround for some Nvidia cards

#Require root privlages
if [[ $UID != 0 ]]
then
  echo "Must be run as root."
  exit
fi


#See if nouveau.config=NvMSI=0 is configured to be on or off to tell the user
CURRENTOPTION=$(cat /etc/default/grub | grep GRUB_CMDLINE_LINUX_DEFAULT | grep -c nouveau.config=NvMSI=0)
if [[ $CURRENTOPTION != 0 ]]
then
  CURRENTOPTION=1
fi

#Tell the user what the script does
dialog  --msgbox "This will assist you in configuring your system to have a workaround enabled for some Nvidia cards" 7 60

#Ask the user what to do
FORCEFB=$(dialog --radiolist "Would you like to turn on the Nvidia workaround?
Current Option: $CURRENTOPTION" 20 60 20 1 "Turn on workaround" off 0 "Turn off workaround" off 2 "Leave Unchanged" on --stdout)
OKSelected=$?

#If the user hit OK, and didn't select "leave unchanged"
if [[ $OKSelected == 0 && $FORCEFB != 2 ]]
then
  #if the user selected to force the Framebuffer, then add the nouveau.config=NvMSI=0  argument to the default command line. But make sure it's the only nouveau.config=NvMSI=0   being passed
  if [[ $FORCEFB == 1 ]]
  then
    sed -ri 's/nouveau.config=NvMSI=0 //gI' /etc/default/grub
    sed -i "s/GRUB_CMDLINE_LINUX_DEFAULT=\"/GRUB_CMDLINE_LINUX_DEFAULT=\"nouveau.config=NvMSI=0  /g" /etc/default/grub
  #if the user selected to not force the Framebuffer, then remove the nouveau.config=NvMSI=0  argument from the default command line
  elif [[ $FORCEFB == 0 ]]
   then
    sed -ri 's/nouveau.config=NvMSI=0 //gI' /etc/default/grub
  fi

  #update the grub configs, and ask the user to restart now or later
  update-grub
  dialog  --yesno "You will need to restart in order for the changes to apply

Restart now?" 7 60
  OKSelected=$?
  #if the user opted to restart, then restart
  if [[ $OKSelected == 0 ]]
  then
    reboot
  fi

fi