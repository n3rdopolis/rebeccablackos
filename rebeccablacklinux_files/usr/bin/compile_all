argument=$1

mkdir /usr/share/Downloadlog
mkdir /usr/share/Buildlog
export MAKEDEBS=1

#build these packages in this order. # symbol is a comment
echo "
wayland
drm
macros
glproto
dri2proto
mesa
xproto
kbproto
libX11
libxkbcommon
pixman
cairo
weston
cmake
extra-cmake-modules
qt5
giucam-qtwayland
libdbusmenu-qt
snowshoe
phonon
kdelibs
kde-baseapps
kde-workspace
libxtrans
xserver
xf86-video-wlshm
glib
gtk+
vte
cogl
clutter
efl
edje
emotion
elementary
SDL
mplayer2-wayland
gstreamer
gst-plugins-base
gst-plugins-bad
gst-plugins-good
gst-plugins-ugly
gst-plugins-gl
gst-libav
kmscon
" | awk -F "#" '{print $1}' | while read BUILDNAME
do

#compile_all is running to download the source
if [[ "$argument" == download-only ]]
then
STARTTIME=$(date +%s)
echo "Downloading/updating $BUILDNAME source"
"/usr/bin/Compile/$BUILDNAME" download-only 2>&1 | tee  /usr/share/Downloadlog/$BUILDNAME
ENDTIME=$(date +%s)
echo "Download finished in $((ENDTIME-STARTTIME)) seconds" >> /usr/share/Downloadlog/$BUILDNAME
fi

#compile_all is running to build the source
if [[ "$argument" == build-only ]]
then
STARTTIME=$(date +%s)
echo "building $BUILDNAME"
"/usr/bin/Compile/$BUILDNAME" build-only 2>&1 | tee  /usr/share/Buildlog/$BUILDNAME
ENDTIME=$(date +%s)
echo "Build finished in $((ENDTIME-STARTTIME)) seconds" >> /usr/share/Buildlog/$BUILDNAME
fi

#compile_all is running to download and build
if [[ ! -n "$argument" ]]
then
"/usr/bin/Compile/$BUILDNAME"
fi

done
