#set LD_LIBRARY_PATH
export LD_LIBRARY_PATH=/usr/local/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH):/usr/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH):/usr/local/lib:/usr/lib


mkdir /usr/share/Buildlog
mkdir /srcbuild

echo "
wayland
drm
macros
glproto
dri2proto
mesa
xproto
kbproto
libX11
libxkbcommon
pixman
cairo
weston
qtbase
qtwayland
extra-cmake-modules
kdelibs
xserver
xf86-video-wlshm
glib
gtk+
cogl
clutter
eina
eet
evas
ecore
embryo
edje
efreet
e_dbus
eeze
elementary
" | while read BUILDSCRIPT
do
echo "building $BUILDSCRIPT"
"/usr/bin/Compile/$BUILDSCRIPT" 2>&1 | tee  /usr/share/Buildlog/$BUILDSCRIPT
done

#remove the build packages
rm -rf /srcbuild