argument=$1

export MAKEDEBS=1

#build these packages in this order. # symbol is a comment
echo "
wayland
drm
macros
glproto
dri2proto
mesa
libxkbcommon
libevdev
pixman
cairo
libva
vdpau-driver
intel-driver
weston
cmake
extra-cmake-modules
qt5
qtwayland
libdbusmenu-qt
phonon
attica
kdelibs
kactivities
plasma-framework
kde-runtime
#kde-baseapps
kde-workspace
konsole
plasmate
kdeplasma-addons
calligra
fluid
qtconfiguration
widget-styles
widget-factory
wallpapers
icon-themes
eyesight
hawaii-terminal
cinema
qtaccountsservice
polkit-qt-1
system-preferences
greenisland
hawaii-shell
libxtrans
xserver
xf86-video-wayland
glib
harfbuzz
freetype2
fontconfig
pango
atk
gdk-pixbuf
Greybird
gtk
unico
vte
cogl
clutter
clutter-gtk
gjs
libusbx
upower
mutter-wayland
mutter-x11
gnome-shell
nuclear
orbital
efl
elementary
enlightenment
terminology
etrophy
e_cho
elemines
econcentration
emote
equate
ecrire
ephoto
SDL
mplayer2-wayland
mpv
gstreamer
gst-plugins-base
gst-plugins-bad
gst-plugins-good
gst-plugins-ugly
gst-plugins-gl
gst-libav
kmscon
glmark
" | awk -F "#" '{print $1}' | while read BUILDNAME
do

#compile_all is running to download the source
if [[ "$argument" == download-only ]]
then
echo "Downloading/updating $BUILDNAME source"
"/usr/bin/Compile/$BUILDNAME" download-only 2>&1 
fi

#compile_all is running to build the source
if [[ "$argument" == build-only ]]
then
echo "building $BUILDNAME"
"/usr/bin/Compile/$BUILDNAME" build-only 2>&1
fi

#compile_all is running to download and build
if [[ ! -n "$argument" ]]
then
"/usr/bin/Compile/$BUILDNAME"
fi

done
