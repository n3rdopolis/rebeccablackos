ACTION=$(echo "Switch User
Logoff
Shutdown
Restart
Standby
Hybrid Sleep
Hibernate" | zenity --title="Leave..." --height=450 --list  --hide-header --text="What do you want to do?" --separator="\n" --column 'action' | head -1 | grep -v 'startup message: remove:' )

if [[ $ACTION == "Switch User" ]]
then
echo "Switch" > /run/loginmanager_control
RESULT=$?

elif [[ $ACTION == "Logoff" ]]
then
ecryptfs-umount-private
echo "Change" > /run/loginmanager_control
disown
fuser -k $XDG_RUNTIME_DIR/$WAYLAND_DISPLAY
RESULT=$?

elif [[ $ACTION == "Shutdown" ]]
then
dbus-send --system --dest=org.freedesktop.ConsoleKit --type=method_call --print-reply --reply-timeout=2000 /org/freedesktop/ConsoleKit/Manager org.freedesktop.ConsoleKit.Manager.Stop
RESULT=$?
elif [[ $ACTION == "Restart" ]]
then
dbus-send --system --dest=org.freedesktop.ConsoleKit --type=method_call --print-reply --reply-timeout=2000 /org/freedesktop/ConsoleKit/Manager org.freedesktop.ConsoleKit.Manager.Restart
RESULT=$?
elif [[ $ACTION == "Standby" ]]
then
dbus-send --print-reply --system --dest=org.freedesktop.login1 /org/freedesktop/login1 org.freedesktop.login1.Manager.Suspend boolean:true
RESULT=$?
elif [[ $ACTION == "Hybrid Sleep" ]]
then
dbus-send --print-reply --system --dest=org.freedesktop.login1 /org/freedesktop/login1 org.freedesktop.login1.Manager.HybridSleep boolean:true
RESULT=$?
elif [[ $ACTION == "Hibernate" ]]
then
dbus-send --print-reply --system --dest=org.freedesktop.login1 /org/freedesktop/login1 org.freedesktop.login1.Manager.Hibernate boolean:true
RESULT=$?
else
exit
fi

if [[ $RESULT != 0 ]]
then
zenity --title="Failure" --warning --text="Failed to $ACTION"
fi