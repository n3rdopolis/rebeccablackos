export MAKEFLAGS="-j $(( $(cat /proc/cpuinfo | grep ^"processor" -c) ))"

export WLD=$1

export LD_LIBRARY_PATH=$WLD/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH):/usr/local/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH):/usr/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH):$WLD/lib:/usr/local/lib:/usr/lib
export PATH="$WLD/sbin:$WLD/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/usr/local/bin:/sbin:/bin:/usr/games"
export PKG_CONFIG_PATH=$WLD/lib/$(dpkg-architecture -qDEB_HOST_MULTIARCH)/pkgconfig:$WLD/lib/pkgconfig/:$WLD/share/pkgconfig/
export ACLOCAL="aclocal -I $WLD/share/aclocal"
export C_INCLUDE_PATH=$WLD/include
export LIBRARY_PATH=$WLD/lib
export PKG_CONFIG_ALLOW_SYSTEM_CFLAGS=1
export QT_PLUGIN_PATH=$WLD/lib/plugins/
export CMAKE_PREFIX_PATH=$WLD:$CMAKE_PREFIX_PATH