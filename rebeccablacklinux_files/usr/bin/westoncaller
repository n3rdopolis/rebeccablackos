Server=$(echo $* | awk -F @@ '{print $1}')
if [[ -z $Server ]]
then
Server=/opt/bin/weston-display-server
fi
ServerApprovedCount=$(cat /etc/waylandservers | grep -c "^$Server$")
if [[ $ServerApprovedCount == 0 ]]
then 
echo "Unapproved Wayland Server attempted to Execute. Server binary path will need to be added to /etc/waylandservers in order to run."
exit
fi
Args=$(echo $* | awk -F @@ '{print $2}')
. /usr/bin/weston_vars
ServerID=wayland-$RANDOM
$Server --socket=$ServerID  $Args 