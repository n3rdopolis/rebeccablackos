export FILENAMEID=$RANDOM

zenity --warning --text="This will convert any weston screencapture data into usable formats."

vte2_90 -c /usr/libexec/wayland_helpers/weston-video-convert-helper
vte2_90 -c /usr/libexec/wayland_helpers/weston-video-convert-helper-264
cp ~/wayland-screenshot.png ~/wayland-screenshot-$RANDOM.png
