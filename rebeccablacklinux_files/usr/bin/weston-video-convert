export FILENAMEID=$RANDOM

if [[ ! -f ~/capture.wcap ]]
then
zenity --warning --text="No capture file to convert. To create a capture recording of your Desktop, press super key + r to start the recording, and super key + r to end the recording."
exit
fi

zenity --warning --text="This will convert the captured video data from your recorded desktop session into a playable movie file. Press OK to continue."

vte2_90 -c /usr/libexec/wayland_helpers/weston-video-convert-helper
if [[ -f ~/weston-capture-$FILENAMEID.webm ]]
then
zenity --warning --text="Created movie file ~/weston-capture-$FILENAMEID.webm out of the captured desktop file."
rm ~/capture.wcap
else
zenity --warning --text="Failed to convert file"
fi