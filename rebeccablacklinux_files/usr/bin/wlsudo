zenity --forms --text="The following command will be executed as root
$*
Please enter your password to continue:" --title=wlsudo --add-password="" | sudo -S -b -E waylandapp $*
result=${PIPESTATUS[1]}
if [[ $result == 1 ]]
then
zenity --info --title=wlsudo --text="Invalid Password"
fi