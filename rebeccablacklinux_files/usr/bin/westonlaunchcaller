. /usr/bin/weston_vars
if [[ $WAYLAND_DISPLAY == loginmanagerdisplay ]]
then
export XDG_RUNTIME_DIR=/run/
fi



Server=$(echo $* | awk -F @@ '{print $1}' | sed 's/ *$//g')
Args=$(echo $* | awk -F @@ '{print $2}')


#Detrermine if the server is safe
ServerApprovedCount=$(cat /etc/waylandservers | grep -c ^$Server$)

#Only run if the server is safe
if [[ $ServerApprovedCount == 0 ]]
then 
echo "Unapproved Wayland Server attempted to Execute. Server binary path will need to be added to /etc/waylandservers in order to run."
exit
else 
#Execute the Wayland server
$Server $Args 
fi


