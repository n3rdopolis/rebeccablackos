SERVER=$(kdialog --menu "Choose the display server." "Wayland" "Native Weston Display Server" "Xwayland" "Weston Fullscreen Under Xorg Display Server" "KDE" "KDE Under Xorg Display Server" )

#inherit variables for Wayland, so this script can actually find weston-launch with $PATH. 


if [ $SERVER == "Wayland" ]
then
. /usr/bin/weston_vars
weston-launch
startkde

elif [ $SERVER == "Xwayland" ]
then
. /usr/bin/weston_vars
DIMENSIONS=$(xwininfo -root | grep 'geometry' | awk '{print $2}' | awk -F + '{print $1}' )
WIDTH=$(echo $DIMENSIONS | awk -F x '{print $1}')
HEIGHT=$(echo $DIMENSIONS | awk -F x '{print $2}')
weston-display-server --fullscreen --width=$WIDTH --height=$HEIGHT --xserver
startkde

else
startkde
fi