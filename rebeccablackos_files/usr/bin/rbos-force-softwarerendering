#This script configures Grub to add wlmforceswrender to the kernel command line, which is parsed by the waylandloginmanager to use the fbdev-backend, even if drm-backend is available to run

DIALOGUSER=daemon


#Require root privlages
if [[ $UID != 0 ]]
then
  echo "Must be run as root."
  exit
fi


#See if wlmforceswrender is configured to be on or off to tell the user
CURRENTOPTION=$(cat /etc/default/grub | grep GRUB_CMDLINE_LINUX_DEFAULT | grep -c wlmforceswrender)
if [[ $CURRENTOPTION != 0 ]]
then
  CURRENTOPTION=1
fi

#Tell the user what the script does
sudo -E -u $DIALOGUSER dialog  --msgbox "This will assist you in configuring your system, to force software rendering." 7 60

#Ask the user what to do
FORCESW=$(sudo -E -u $DIALOGUSER dialog --radiolist "Would you like to force/unforce software rendering?
Current Option: $CURRENTOPTION" 20 60 20 1 "Force Software Rendering" off 0 "Unforce Software Rendering" off 2 "Leave Unchanged" on --stdout 2>/dev/tty)
OKSelected=$?

#If the user hit OK, and didn't select "leave unchanged"
if [[ $OKSelected == 0 && $FORCESW != 2 ]]
then
  #if the user selected to force software rendering, then add the wlmforceswrender argument to the default command line. But make sure it's the only wlmforceswrender  being passed
  if [[ $FORCESW == 1 ]]
  then
    sed -ri 's/wlmforceswrender//gI' /etc/default/grub
    sed -i "s/GRUB_CMDLINE_LINUX_DEFAULT=\"/GRUB_CMDLINE_LINUX_DEFAULT=\"wlmforceswrender /g" /etc/default/grub
  #if the user selected to not force software rendering, then remove the wlmforceswrender argument from the default command line
  elif [[ $FORCESW == 0 ]]
   then
    sed -ri 's/wlmforceswrender//gI' /etc/default/grub
  fi

  #update the grub configs, and ask the user to restart now or later
  update-grub
  sudo -E -u $DIALOGUSER dialog  --yesno "You will need to restart in order for the changes to apply

Restart now?" 7 60
  OKSelected=$?
  #if the user opted to restart, then restart
  if [[ $OKSelected == 0 ]]
  then
    reboot
  fi

fi
