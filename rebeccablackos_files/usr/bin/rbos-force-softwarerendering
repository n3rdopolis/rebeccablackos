#This script configures Grub to add wlmforceswrender to the kernel command line, which is parsed by the waylandloginmanager to use the fbdev-backend, even if drm-backend is available to run

DIALOGUSER=daemon


#Require root privlages
if [[ $UID != 0 ]]
then
  echo "Must be run as root."
  exit
fi


#See if wlmforceswrender is configured to be on or off to tell the user
CURRENTOPTION=$(/usr/bin/waylandloginmanager --getconfigkey wlmforceswrender "" 0 0)

#Tell the user what the script does
runuser -u $DIALOGUSER -- dialog  --msgbox "This will assist you in configuring your system, to force software rendering. This updates /etc/waylandloginmanager.conf . Keep in mind If you specified an option on the kernel command line, that option will override it." 10 60

#Ask the user what to do
FORCESW=$(runuser -u $DIALOGUSER -- dialog --radiolist "Would you like to force/unforce software rendering?
Current Option: $CURRENTOPTION" 20 60 20 1 "Force Software Rendering" off 0 "Unforce Software Rendering" off 2 "Leave Unchanged" on --stdout 2>/dev/tty)
OKSelected=$?

#If the user hit OK, and didn't select "leave unchanged"
if [[ $OKSelected == 0 && $FORCESW != 2 ]]
then
  #if the user selected to force software rendering, then set the wlmforceswrender argument to 1 in the config file.
  if [[ $FORCESW == 1 ]]
  then
    /usr/bin/waylandloginmanager --setconfigkey wlmforceswrender 1
  #if the user selected to not force software rendering, then set the wlmforceswrender argument to 0 in the config file.
  elif [[ $FORCESW == 0 ]]
  then
    /usr/bin/waylandloginmanager --setconfigkey wlmforceswrender 0
  fi
  runuser -u $DIALOGUSER -- dialog  --msgbox "You will need to restart the waylandloginmanager service for the change to take effect" 7 60
fi
