#This script displays a status on power information, such as battery percentages, and if the power is plugged in

SampleDate=$(date +"%Y-%m-%d %I:%M %p")

#Get Battery status
BatteryString=$(acpi -V 2>/dev/null | grep ^Battery:)
if [[ -z $BatteryString ]]
then
  BatteryString="No batteries detected"
fi

kdialog --msgbox "
Battery Status as of $SampleDate

$BatteryString" --title="Battery Status"
