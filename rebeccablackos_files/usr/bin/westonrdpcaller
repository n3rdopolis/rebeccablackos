#This script calls a Weston server with the RDP backend

cd ~

zenity --forms --text="A new Weston server supporting RDP connections will start the background. 

*Please note that the RDP session will NOT be password protected." 


rdpdialog &
DIALOGPID=$!

ServerID=wayland-$RANDOM
weston --socket=$ServerID --xwayland --backend=rdp-backend.so --rdp-tls-cert=~/.config/weston-rdp/rdpcrt.crt --rdp-tls-key=~/.config/weston-rdp/rdpcrtkey.key &
WESTONPID=$!

#Wait until the zenity form dies, or until the remote enabled weston dies
while [ 1 ]
do
  #If either the weston server dies, or the dialog dies, terminate both, and exit
  if [[ ! -e /proc/$DIALOGPID || ! -e /proc/$WESTONPID ]]
  then
    kill -9 $WESTONPID
    kill -9 $DIALOGPID
    exit
  fi
sleep 1
done
