#This script configures Grub to add wlmforcevblankoff  to the kernel command line, which is parsed by the waylandloginmanager to use the fbdev-backend, even if drm-backend is available to run

DIALOGUSER=daemon


#Require root privlages
if [[ $UID != 0 ]]
then
  echo "Must be run as root."
  exit
fi


#See if wlmforcevblankoff  is configured to be on or off to tell the user
CURRENTOPTION=$(cat /etc/default/grub | grep GRUB_CMDLINE_LINUX_DEFAULT | grep -c wlmforcevblankoff )
if [[ $CURRENTOPTION != 0 ]]
then
  CURRENTOPTION=1
fi

#Tell the user what the script does
sudo -E -u $DIALOGUSER dialog  --msgbox "This will assist you in configuring your system, to force disable vblank" 7 60

#Ask the user what to do
FORCEVB=$(sudo -E -u $DIALOGUSER dialog --radiolist "Would you like to force/unforce vblank?
Current Option: $CURRENTOPTION" 20 60 20 1 "Force vblank to be off" off 0 "Unforce vblank, and use default" off 2 "Leave Unchanged" on --stdout 2>/dev/tty)
OKSelected=$?

#If the user hit OK, and didn't select "leave unchanged"
if [[ $OKSelected == 0 && $FORCEVB != 2 ]]
then
  #if the user selected to force software rendering, then add the wlmforcevblankoff  argument to the default command line. But make sure it's the only wlmforcevblankoff   being passed
  if [[ $FORCEVB == 1 ]]
  then
    sed -ri 's/wlmforcevblankoff //gI' /etc/default/grub
    sed -i "s/GRUB_CMDLINE_LINUX_DEFAULT=\"/GRUB_CMDLINE_LINUX_DEFAULT=\"wlmforcevblankoff  /g" /etc/default/grub
  #if the user selected to not force software rendering, then remove the wlmforcevblankoff  argument from the default command line
  elif [[ $FORCEVB == 0 ]]
   then
    sed -ri 's/wlmforcevblankoff //gI' /etc/default/grub
  fi

  #update the grub configs, and ask the user to restart now or later
  update-grub
  sudo -E -u $DIALOGUSER dialog  --yesno "You will need to restart in order for the changes to apply

Restart now?" 7 60
  OKSelected=$?
  #if the user opted to restart, then restart
  if [[ $OKSelected == 0 ]]
  then
    reboot
  fi

fi
