#This script configures Grub to add wlmforcevblankoff  to the kernel command line, which is parsed by the waylandloginmanager to use the fbdev-backend, even if drm-backend is available to run

DIALOGUSER=daemon


#Require root privlages
if [[ $UID != 0 ]]
then
  echo "Must be run as root."
  exit
fi


#See if wlmforcevblankoff  is configured to be on or off to tell the user
CURRENTOPTION=$(/usr/bin/waylandloginmanager --getconfigkey wlmforcevblankoff "" 0 0)

#Tell the user what the script does
sudo -E -u $DIALOGUSER dialog  --msgbox "This will assist you in configuring your system, so that the vblank option is forced. This updates /etc/waylandloginmanager.conf . Keep in mind If you specified an option on the kernel command line, that option will override it. " 10 60

#Ask the user what to do
FORCEVB=$(sudo -E -u $DIALOGUSER dialog --radiolist "Would you like to force/unforce vblank?
Current Option: $CURRENTOPTION" 20 60 20 1 "Force vblank to be off" off 0 "Unforce vblank, and use default" off 2 "Leave Unchanged" on --stdout 2>/dev/tty)
OKSelected=$?

#If the user hit OK, and didn't select "leave unchanged"
if [[ $OKSelected == 0 && $FORCEVB != 2 ]]
then
  #if the user selected to force vblank off, then set the wlmforcevblankoff argument to 1 in the config file.
  if [[ $FORCEVB == 1 ]]
  then
    /usr/bin/waylandloginmanager --setconfigkey wlmforcevblankoff 1
  #if the user selected to not force vblank off, then set the wlmforcevblankoff argument to 0 in the config file.
  elif [[ $FORCEVB == 0 ]]
  then
    /usr/bin/waylandloginmanager --setconfigkey wlmforcevblankoff 0
  fi
  sudo -E -u $DIALOGUSER dialog  --msgbox "You will need to restart the waylandloginmanager service for the change to take effect" 7 60
fi
