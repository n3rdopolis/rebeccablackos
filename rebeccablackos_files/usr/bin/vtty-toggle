#Disable a vtty (until the next reboot)

#Require root privlages
if [[ $UID != 0 ]]
then
  echo "Must be run as root."
  exit
fi


TTYNumber=$1
if [[ -z $TTYNumber || $TTYNumber != tty* || ! -e /dev/$TTYNumber ]]
then
  echo "Disables a vtty, forcing legacy mode, until the next reboot"
  echo "Must specfy a tty"
  echo "example"
  echo "vtty-toggle tty1"
  exit
fi




function ResetTTYMode
{
    python3 -c "from array import array; \
from fcntl import ioctl; \
buf = array('h', [0]); \
buf[0] = 0; \
fd = open('/dev/$1', 'wb'); \
ioctl(fd, 0x4B3A, 0); \
ioctl(fd, 0x05602, buf); \
fd.close()" &>/dev/null
}

systemctl stop vtty-frontend@$TTYNumber.service
ResetTTYMode $TTYNumber
systemctl start getty@$TTYNumber.service

CurrentTTY="tty$(fgconsole)"
if [[ $CurrentTTY == $TTYNumber ]]
then
  chvt 63
   sleep 1
  chvt ${TTYNumber//tty/}
fi
