[Unit]
Description=Session in tmux for vTTY %I
Before=vtty-frontend@.service
#Wants=vtty-monitor.service

[Service]
Restart=on-failure
RestartSec=0

ExecStart=/usr/lib/vtty/vtty-backend %I
Type=notify

IgnoreSIGPIPE=false
SendSIGHUP=true
KillMode=process

[Install]
WantedBy=getty.target
DefaultInstance=tty1
